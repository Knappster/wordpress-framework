{
    "name": "knappster/wordpress-framework",
    "description": "Wordpress boilerplate with Docker, Composer, Webpack and a few other nice things",
    "authors": [
        {
            "name": "Carl Knapp",
            "email": "kn4ppster@gmail.com"
        }
    ],
    "type": "project",
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^5.2",
        "wpackagist-plugin/wordpress-seo": "^13.4",
        "wpackagist-plugin/advanced-custom-fields": "^5.8",
        "vlucas/phpdotenv": "^3.3",
        "slowprog/composer-copy-file": "^0.3.1"
    },
    "scripts": {
        "post-install-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ],
        "post-update-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ]
    },
    "extra": {
        "wordpress-install-dir": "public/wp-core",
        "installer-paths": {
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
        },
        "copy-file": {
            "plugins/": "public/wp-content/plugins/?"
        }
    }
}
